<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="500dp"
    tools:context="org.soonhyung.beautynote.popup.SaveCustomerPopup"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="번호"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <EditText
                android:id="@+id/edit_cus_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:singleLine="true"
                android:editable="false"
                android:background="@drawable/edittext_disable"
                android:layout_margin="5dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="* 이름"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <EditText
                android:id="@+id/edit_cus_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:singleLine="true"
                android:background="@drawable/edittext_enable"
                android:layout_margin="5dp"
                android:textSize="20sp"/>
        </LinearLayout><ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="* 생년월일"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <EditText
                android:id="@+id/edit_cus_birth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:singleLine="true"
                android:background="@drawable/edittext_enable"
                android:layout_margin="5dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="* 연락처"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <EditText
                android:id="@+id/edit_cus_tel_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:singleLine="true"
                android:background="@drawable/edittext_enable"
                android:layout_margin="5dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="주소"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <EditText
                android:id="@+id/edit_cus_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:singleLine="true"
                android:background="@drawable/edittext_enable"
                android:layout_margin="5dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="상태"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <RadioGroup
                android:id="@+id/radio_cus_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_margin="5dp">
                <RadioButton
                    android:id="@+id/radio_cus_status_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:checked="true"
                    android:layout_marginRight="20dp"
                    android:text="정상"/>
                <RadioButton
                    android:id="@+id/radio_cus_status_leave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="탈퇴"/>
            </RadioGroup>
        </LinearLayout>
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="성별"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <RadioGroup
                android:id="@+id/radio_cus_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_margin="5dp">
                <RadioButton
                    android:id="@+id/radio_cus_gender_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    android:text="남성"/>
                <RadioButton
                    android:id="@+id/radio_cus_gender_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:checked="true"
                    android:text="여성"/>
            </RadioGroup>
        </LinearLayout>
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="SMS동의"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_margin="5dp">
                <CheckBox
                    android:id="@+id/chk_sms_agree_yn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_customer_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/btnTextColor"
            android:background="@color/btnColor"
            android:text="등록"/>
        <Button
            android:id="@+id/btn_customer_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/btnTextColor"
            android:background="@color/btnColor"
            android:text="취소"/>
    </LinearLayout>
</LinearLayout>
